@model Quizzes7.ViewModels.ClusterUnitIndexData

@{
    ViewBag.Title = "Clusters";
}

<h2>Clusters</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>Name</th>
        <th>Clusters</th>
        <th></th>
    </tr>

    @foreach (var item in Model.clusters)
    {
        string selectedRow = "";
        if (item.id == ViewBag.ClusterID)
        {
            selectedRow = "success";
        }
        <tr class="@selectedRow">
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @{
                    foreach (var unit in item.units)
                    {
                        @unit.id @:  @unit.name <br />
                    }
                }
            </td>
            <td>
                @Html.ActionLink("Select", "Index", new { id = item.id }) |
                @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
                @Html.ActionLink("Details", "Details", new { id = item.id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.id })
            </td>
        </tr>
    }

</table>

@if (Model.units != null)
{
    <h3>Units in the Cluster</h3>
    <table class="table">
        <tr>
            <th></th>
            <th>Id</th>
            <th>Name</th>
        </tr>

        @foreach (var item in Model.units)
        {
            string selectedRow = "";
            if (item.id == ViewBag.id)
            {
                selectedRow = "success";
            }
            <tr class="@selectedRow">
                <td>
                    @Html.ActionLink("Select", "Index", new { lecturerID = item.id })
                </td>
                <td>
                    @item.id
                </td>
                <td>
                    @item.name
                </td>
            </tr>
        }

    </table>
}

@if (Model.lecturers != null)
{
    <h3>Lecturers teaching the cluster</h3>
    <table class="table">
        <tr>
            <th>Name</th>
        </tr>
        @foreach (var item in Model.lecturers)
        {
            string selectedRow = "";
            if (item.id == ViewBag.UnitID)
            {
                selectedRow = "success";
            }
            <tr class="@selectedRow">
                <td>
                    @item.id
                </td>
                <td>
                    @item.first_name
                </td>
                <td>
                    @item.last_name
                </td>
            </tr>
        }

    </table>
}