@model IEnumerable<Quizzes7.Models.Question>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.content)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.quiz_id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.type_id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.language_id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.specific_id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.correct_answer)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
        
        string selectedRow = "";
        if (item.id == ViewBag.QuestionID)
        {
            selectedRow = "success";
        }
            <tr class="@selectedRow">
                <td>
                    @Html.DisplayFor(modelItem => item.content)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.quiz_id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.type_id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.language_id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.specific_id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.correct_answer)
                </td>
                <td>
                    @{
                        foreach (var question_extra in item.question_extras)
                        {
                            @question_extra.content @:  @question_extra.id <br />
                        }
                    }
                </td>
                <td>
                    @Html.ActionLink("Select", "Index", new { id = item.id }) |
                    @Html.ActionLink("Edit", "Edit", new { id=item.id }) |
                    @Html.ActionLink("Details", "Details", new { id=item.id }) |
                    @Html.ActionLink("Delete", "Delete", new { id=item.id })
                </td>
            </tr>
}

</table>
